<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.manimaran.wikiaudio.activity.AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_app_logo"
                android:layout_width="@dimen/logo_large"
                android:layout_height="@dimen/logo_large"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:src="@drawable/ic_spell4wiki_main" />

            <TextView
                android:id="@+id/txt_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_app_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/about_app"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_app_version_and_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_version_and_license"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:linksClickable="true"
                android:textSize="@dimen/text_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rate_app"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_rate_us"
                    android:drawablePadding="8dp"
                    android:background="@drawable/bg_line_border"
                    android:gravity="center"
                    android:text="@string/rate_app"
                    android:maxLines="1"
                    android:textSize="@dimen/text_semi_normal"
                    tools:ignore="RelativeOverlap" />


                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="13dp"
                    android:background="@drawable/bg_line_border"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/share"
                    android:maxLines="1"
                    android:textSize="@dimen/text_semi_normal"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_powered_by"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/view_line_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="15dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/txt_powered_by_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/powered_by"
                android:textSize="@dimen/text_semi_normal" />

            <LinearLayout
                android:id="@+id/layout_kaniyam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_powered_by"
                    android:layout_width="@dimen/img_normal"
                    android:layout_height="@dimen/img_normal"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/kaniyam"
                    android:padding="5dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/logo_kaniyam" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_powered_by_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/kaniyam"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_powered_by_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:text="@string/about_kaniyam"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/txt_powered_by_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="2"
                        android:text="@string/link_kaniyam"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_vglug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_powered_by_2"
                    android:layout_width="@dimen/img_normal"
                    android:layout_height="@dimen/img_normal"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitStart"
                    android:contentDescription="@string/kaniyam"
                    android:src="@drawable/logo_vglug" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/vglug"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:text="@string/about_vglug"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="2"
                        android:text="@string/link_vglug"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="15dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/txt_how_to_contribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/how_to_contribute"
                android:drawableStart="@drawable/ic_help"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_source_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/source_code"
                android:drawableStart="@drawable/ic_git"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_contributors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/contributors"
                android:drawableStart="@drawable/ic_contributors"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_third_party_lib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/third_party_libraries"
                android:drawableStart="@drawable/ic_third_party_library"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/credits"
                android:drawableStart="@drawable/ic_credits"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_help_development"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/help_development"
                android:drawableStart="@drawable/ic_help_development"
                android:textSize="@dimen/text_semi_normal" />

            <TextView
                android:id="@+id/txt_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/contact_us"
                android:drawableStart="@drawable/ic_contact_us"
                android:textSize="@dimen/text_semi_normal" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.about.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/language"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutSpell4WikiLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/spell4wiktionary"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSpell4WikiLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSpell4WordListLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/spell4wordlist"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSpell4WordListLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSpell4WordLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/spell4word"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSpell4WordLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWiktionaryLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/wiktionary"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtWiktionaryLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16dp"
            android:layout_marginBottom="@dimen/space8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/license"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutLicenseOfUploadAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/license_of_upload_audio"
                android:textSize="@dimen/text_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLicenseOfUploadAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space4dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/language"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLicenseOfUploadAudioLegalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/language"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal" />

            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16dp"
            android:layout_marginBottom="@dimen/space8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/app_settings"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutLanguageOfApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/app_language"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAppLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAbortAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAbortAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/settings_label_text"
                android:checked="true"
                android:text="@string/abort_exit_alerts" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAbortAlertStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/space32dp"
                android:text="@string/show_exit_alerts_in_spell4wiki_options"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
